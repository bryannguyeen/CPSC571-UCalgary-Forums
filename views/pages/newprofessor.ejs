
<!DOCTYPE html>
<html lang="en">

  <% include ../partials/head %>
  <body>

    <% include ../partials/navbar %>


    <div class="container">

      <div class="row row-offcanvas row-offcanvas-right">

        <div class="col-12 col-md-9">
          <p class="float-right hidden-md-up">
            <button type="button" class="btn btn-primary btn-sm" data-toggle="offcanvas">Toggle nav</button>
          </p>
          <h1>New Professor</h1>
          <div class="jumbotron">
            <form action="/newprofessor" method="POST">
              <h5>Professor First Name</h5>
              <input class="form-control" type="text" name="FName" value = "" required>
              <br>

              <h5>Professor Middle Initial (Optional)</h5>
              <input class="form-control" type="text" name="MInit"  value = "">
              <br>

              <h5>Professor Last Name</h5>
              <input class="form-control" type="text" name="LName"  value = "" required>
              <br>

              <h5>Department</h5>
              <% include ../partials/departmentselect %>
                <br><br>
              <button class="btn btn-lg btn-primary">Submit</button>
            </form>
          </div>
        </div>
        <%- include('../partials/sidebar', {active: 'professors'}); %>

      </div>

      <hr>
    </div>
  </body>
</html>
